<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_temp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_co2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/chart_temp"
        android:layout_below="@+id/chart_temp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chart_humid"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/chart_temp"
        android:layout_below="@+id/chart_co2" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Current Data"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/tempVal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="temp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/co2Val"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:hint="co2"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/humidVal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="170dp"
        android:ems="10"
        android:hint="humid"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_current_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="14dp"
        android:text="C Data" />

</RelativeLayout>